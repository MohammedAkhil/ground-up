{
  "title": "Left Shift to Tilde",
  "url": "https://vonng.com/capslock.json",
  "rules": [
    {
      "description": "change shift to shift during hold or ` if alone",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
