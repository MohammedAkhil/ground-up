{
  "title": "Shift to Z",
  "url": "https://vonng.com/capslock.json",
  "rules": [
    {
      "description": "change shift to Z during hold or escape if alone",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "z"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
